//6. Buatlah program sederhana yang berisi akses anggota (variable) struct di dalam struct

#include <iostream>
#include <stdio.h>
using namespace std;
	struct info_film{
		int tahun;
		int umur;
	};

	struct actor{
		char nama[30];
		char from[30];
		char genre[10];
		char judul[30];
		info_film tittle;
	};
		actor name, info_film, tittle;
int main(){
	cout<<"Judul film : ";
	gets(name.judul);
	cout<<"Nama aktor : ";
	gets(name.nama);
	cout<<"Asal : ";
	gets(name.from);
	cout<<"Umur : ";
	cin>>name.tittle.umur;
	cout<<"Genre utama : ";
	cin>>name.genre;
	cout<<"Tahun rilis : ";
	cin>>name.tittle.tahun;
	cout<<"\n\n";
	
	cout<<"Judul film  : "<<name.judul<<endl;
	cout<<"Nama aktor  : "<<name.nama<<endl;
	cout<<"Asal        : "<<name.from<<endl;
	cout<<"Umur        : "<<name.tittle.umur<<endl;
	cout<<"Genre utama : "<<name.genre<<endl;
	cout<<"Tahun rilis : "<<name.tittle.tahun;
	
	
	return 0;
}
